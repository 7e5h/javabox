<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="0dp"
    android:background="#ff490d0d"
    tools:context="com.snam.jukebox.home">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nowPlaying"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        android:paddingLeft="16dp"
        android:id="@+id/nowPlay"
        />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:paddingLeft="16dp"
        android:scaleType="centerCrop"
        android:layout_below="@id/nowPlay"
        android:layout_marginTop="10dp"
        android:id="@+id/albumArtwork"
        android:onClick="changeArt"
        android:layout_alignLeft="@id/nowPlay"
        />

    <TextView
        android:id="@+id/songTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        android:layout_centerHorizontal="true"
        android:textColor="#FFFFFF"
        android:textSize="15dp"

        android:layout_toRightOf="@id/albumArtwork"
        android:layout_marginLeft="20dp"
        android:layout_marginTop ="55dp"
        />

    <TextView
        android:id="@+id/artist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/songTitle"
        android:layout_centerHorizontal="true"
        android:layout_alignLeft="@id/songTitle"


        android:textColor="#FFFFFF"
        android:textSize="15dp"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:id="@+id/albumTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/artist"
        android:layout_centerHorizontal="true"
        android:layout_alignLeft="@id/artist"

        android:textColor="#FFFFFF"
        android:textSize="15dp"
        android:layout_marginTop="10dp"
        />

    <ProgressBar
        android:id="@+id/songProgress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/albumTitle"
        android:layout_below="@id/albumTitle"
        android:layout_marginTop="10dp"
        android:progress="0"
        android:minWidth="350dp"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        />
    <!--android:minHeight="100dp"
        android:maxHeight="100dp"-->

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/queueNewTrack"
        android:text="Queue New Track"
        android:layout_below="@id/songProgress"
        android:layout_alignLeft="@id/songProgress"
        android:layout_marginTop="20dp"
        android:onClick="queueNew"/>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#000000"
        android:layout_below="@id/queueNewTrack"
        android:layout_marginTop="20dp"/>
    <ListView
        android:background="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/queueNewTrack"
        android:layout_marginTop="20dp"/>

</RelativeLayout>
